
<%= render 'shared/errors', obj: @category %>
<%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", data: {turbo: false}, local: true) do |f| %>

  <div class="form-group row">
    <%= f.label :name, "Category Name", class: "col-2 mb-3 col-form-label text-light" %>
    <div class="col-10">
      <%= f.text_field :name, class:"form-control mb-3 shadow rounded", placeholder: "Enter a name..." %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.submit class: "btn btn-outline-light btn-lg d-grid gap-2 col-3 mx-auto mt-4" %>
  </div>

<% end %>